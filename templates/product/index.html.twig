{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <a href="{{ path('product_new') }}">New product</a>

    {% for product in product_entries %}
        <h2><a href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }}</a></h2>
        <i>{{ product.category.name }}</i>
        <p>{{ product.description }}</p>
        <a href="{{ path('product_edit', {'id': product.id}) }}">Edit product</a>
        <a href="{{ path('product_delete', {'id': product.id}) }}">Delete product</a>
    {% else %}
        <em>Nothing</em>
    {% endfor %}
{% endblock %}
